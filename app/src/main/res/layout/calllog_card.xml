<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/accent_dark"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/calllog_card_avatar_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/calllog_card_chatTitle_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/calllog_card_chatTitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/text_neutral"
        android:textColorHighlight="@color/text_contrast"
        app:layout_constraintStart_toEndOf="@+id/calllog_card_avatar_imageview"
        app:layout_constraintEnd_toStartOf="@+id/calllog_card_preview_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/calllog_card_preview_textview"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/calllog_card_direction_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/calllog_card_chatTitle_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/calllog_card_preview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="latest message"
        android:textColor="@color/text_neutral"
        app:layout_constraintStart_toEndOf="@+id/calllog_card_avatar_imageview"
        app:layout_constraintTop_toBottomOf="@+id/calllog_card_chatTitle_textView"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/chatlist_card_checkmark_imageview"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>