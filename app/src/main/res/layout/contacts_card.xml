<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/accent_dark"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/contacts_card_avatar_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contacts_card_chatTitle_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/contacts_card_chatTitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@color/text_neutral"
        android:textColorHighlight="@color/text_contrast"
        app:layout_constraintStart_toEndOf="@+id/contacts_card_avatar_imageview"
        app:layout_constraintEnd_toStartOf="@+id/contacts_card_preview_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contacts_card_preview_textview"/>

    <TextView
        android:id="@+id/contacts_card_preview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last seen unkown"
        android:textColor="@color/text_neutral"
        app:layout_constraintStart_toEndOf="@+id/contacts_card_avatar_imageview"
        app:layout_constraintTop_toBottomOf="@+id/contacts_card_chatTitle_textView"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>